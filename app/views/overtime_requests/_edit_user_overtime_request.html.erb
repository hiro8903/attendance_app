<% provide(:title, @user.name) %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <h1 class="modal-title">【残業申請Overtimemodel】</h1>
            <%= form_with(model: @attendance, url: update_overtime_request_user_attendance_path(@user), local: true, method: :patch) do |f| %>

            <table class="table table-bordered table-condensed table-hover" id="table-attendances">
              <thead>
                <tr>
                  <th>日付</th>
                  <th>曜日</th>
                  <th>出社</th>
                  <th>退社</th>
                  <th>在社時間</th>
                  <th>備考</th>
                </tr>
              </thead>

              <tbody>
                   <tr>
                      <th></th>
                      <th></th>
                      <th><%= time_field :update_overtime_request, readonly: true, class: "form-control" %></th>
                      <th></th>
                      <th></th>
                      <th></th>
                    </tr>
              </tbody>
            </table>
            
            <div class="center">
              <%= f.submit "更新", class: "btn btn-lg btn-primary" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>